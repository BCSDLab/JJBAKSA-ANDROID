<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:paddingEnd="8dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_item_trend"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/sel_trend_text"
            android:paddingEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_trend_sharp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sharp"
                android:textColor="@color/sel_ff7f23_979797"
                android:layout_marginStart="8dp"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_trend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sharp"
                android:textColor="@color/sel_ff7f23_979797"
                android:layout_marginStart="2dp"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/tv_trend_sharp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="성수동 맛집"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>